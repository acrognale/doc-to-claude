{
  "manifest_version": 3,
  "name": "PDF to Claude",
  "version": "1.0",
  "description": "Add a pdf to Claude without downloading it and uploading it",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_title": "Upload PDF and Set Prompt"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}
