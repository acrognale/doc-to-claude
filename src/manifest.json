{
  "manifest_version": 3,
  "name": "Doc to Claude",
  "version": "1.0",
  "description": "Add a document to Claude without downloading it and uploading it",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_title": "Doc to Claude"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}
